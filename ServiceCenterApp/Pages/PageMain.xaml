<Page x:Class="ServiceCenterApp.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceCenterApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Name="BtnService"
                    Click="BtnService_Click"
                    Style="{StaticResource BtnDefault}">Список услуг</Button>
            <Button x:Name="BtnAddService"
                    Click="BtnAddService_Click"
                    Style="{StaticResource BtnDefault}">Добавить услугу</Button>
            <Button Name="BtnClientServiceAdd"
                    Click="BtnClientServiceAdd_Click"
                    Style="{StaticResource BtnDefault}">Записать клиента на услугу</Button>
            <Button Name="BtnServiceList"
                    Click="BtnServiceList_Click"
                    Style="{StaticResource BtnDefault}">Записи на услуги</Button>
        </StackPanel>
    </Grid>
</Page>
